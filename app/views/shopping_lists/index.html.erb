<section class="shopping-list-section">
  <h1>Shopping List</h1>
  <div>
    <p>Amount of items to buy: <%= @recipe_foods.length %></p>
    <p>Recipe: <%= link_to @recipe, @recipe %></p>
  </div>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% if !@recipe_foods.empty? %>
        <% @recipe_foods.each do |data| %>
          <tr>
            <td><%= data.name %></td>
            <td><%= data.quantity %></td>
            <td>$<%= data.price * data.quantity %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">No items yet. Only foods not added to any recipes are shown here.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>